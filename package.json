{
  "name": "itzgbedrock-server-manager",
  "version": "1.0.0",
  "description": "Minecraft Bedrock Server Manager with Docker support using itzg/bedrock image",
  "main": "server.js",
  "scripts": {
    "start": "npm run build:css:prod && npm run copy-assets && pm2 start ecosystem.config.js --env production",
    "dev": "nodemon server.js",
    "setup": "node setup-websocket.js",
    "build:css": "tailwindcss -i ./public/styles.css -o ./public/output.css --watch",
    "build:css:prod": "tailwindcss -i ./public/styles.css -o ./public/output.css --minify",
    "copy-assets": "node -e \"const fs = require('fs-extra'); fs.copySync('node_modules/sweetalert2/dist', 'public', { overwrite: true });\"",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit"
  },
  "dependencies": {
    "archiver": "^6.0.1",
    "cors": "^2.8.5",
    "dockerode": "^4.0.0",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "multer": "^2.0.2",
    "sweetalert2": "^11.10.1",
    "unzipper": "^0.10.14"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pm2": "^5.3.0",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0"
  }
}
